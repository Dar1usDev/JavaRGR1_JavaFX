<?xml version="1.0" encoding="UTF-8"?>

<?language JavaScript?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="450.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.MainController">

    <HBox fx:id="filtersHBox" alignment="BASELINE_LEFT" prefHeight="150.0" style="-fx-background-color: #2C3740;">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>

        <VBox alignment="CENTER" prefWidth="250.0">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Минимальная сумма" textFill="WHITE">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <TextField fx:id="minSumTextbox" style="-fx-background-color: #FFFFFF;" text="20000" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Максимальная сумма" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <TextField fx:id="maxSumTextbox" style="-fx-background-color: #FFFFFF;" text="1000000" />
        </VBox>
        <VBox alignment="BASELINE_LEFT" layoutX="25.0" layoutY="25.0" prefWidth="180.0">
            <HBox.margin>
                <Insets left="20.0" />
            </HBox.margin>
            <Label text="Доступные банки:" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <RadioButton fx:id="tinkoffBankRadioButton" mnemonicParsing="false" text="Tinkoff" textFill="WHITE">
                <VBox.margin>
                    <Insets left="20.0" />
                </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="sberBankRadioButton" mnemonicParsing="false" text="Sber" textFill="WHITE">
                <VBox.margin>
                    <Insets left="20.0" />
                </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="vtbBankRadioButton" mnemonicParsing="false" text="VTB" textFill="WHITE">
                <VBox.margin>
                    <Insets left="20.0" />
                </VBox.margin>
            </RadioButton>
        </VBox>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" prefWidth="220.0">
            <Label text="Досрочное погашение" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <RadioButton fx:id="earlyRepaymentRadioButton" mnemonicParsing="false" text="Доступно" textFill="WHITE" />
        </VBox>
        <VBox alignment="CENTER" layoutX="555.0" layoutY="25.0" prefWidth="290.0">
            <Label text="Увеличение кредитной линии" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <RadioButton fx:id="prolongationRadioButton" mnemonicParsing="false" text="Доступно" textFill="WHITE" />
        </VBox>
    </HBox>

    <HBox fx:id="creditsHBox" alignment="BASELINE_LEFT" style="-fx-background-color: #28594B;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <ListView fx:id="listView" style="-fx-background-color: #F2B6A0; -fx-pref-width: 940;">
           <HBox.margin>
               <Insets />
           </HBox.margin>
        </ListView>
    </HBox>

</VBox>
